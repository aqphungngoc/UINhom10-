<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/widget_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_itemclicked_noborder"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textColor="@color/text"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/edit_voicenote" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/widget_notelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgound_main"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/widget_emty_string"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>